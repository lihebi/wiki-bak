mixin lists(list, path)
  - each i in list
    - if (typeof(i) == 'string')
      .hebiitem
        a.btn.btn-primary(href="#{path}#{i}")= i
    - else
      .hebilead
        .hebilabel= i.name
        +lists(i.list, path+i.name+'/')

doctype html
html
  include head
  body
    +lists(list, '')
    include foot
